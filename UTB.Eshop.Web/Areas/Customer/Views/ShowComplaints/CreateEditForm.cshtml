@using UTB.Eshop.Web.Areas.Admin.Controllers
@model Complain

@{
    if (String.IsNullOrWhiteSpace(ViewBag.Action) == false)
    {
    <form asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
        @{
            if (ViewBag.Action == nameof(ComplaintShowController.Edit))
            {
                <input type="hidden" asp-for="ID" class="form-control">
            }
        }
        <div class="form-group">
            <label asp-for="OrderNumber"></label>
            <input asp-for="OrderNumber" type="text" class="form-control" placeholder="Enter OrderName">
        </div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" type="text" class="form-control" placeholder="Enter Name">
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="Enter LastName">
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label asp-for="Describe"></label>
            <input asp-for="Describe" class="form-control" placeholder="Enter reason">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    }
}
